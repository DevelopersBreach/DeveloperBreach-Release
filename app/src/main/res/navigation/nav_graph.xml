<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.developerbreach.developerbreach.ui.intro.IntroFragment"
        android:label="Intro"
        tools:layout="@layout/item_intro_view_pager">
        <action
            android:id="@+id/introToHome"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.developerbreach.developerbreach.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/homeToSearch"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/fade_enter_anim"
            app:popEnterAnim="@anim/fade_enter_anim"
            app:popExitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/homeToArticleList"
            app:destination="@id/articleListFragment"
            app:enterAnim="@anim/fade_enter_anim"
            app:popEnterAnim="@anim/fade_enter_anim"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/articleListFragment"
        android:name="com.developerbreach.developerbreach.ui.list.ArticleListFragment"
        android:label="Articles"
        tools:layout="@layout/fragment_article_list" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.developerbreach.developerbreach.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.developerbreach.developerbreach.ui.favorites.FavoritesFragment"
        android:label="favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="com.developerbreach.developerbreach.ui.detail.ArticleDetailFragment"
        android:label="Details"
        tools:layout="@layout/fragment_article_detail">
        <argument
            android:name="articleDetailArgs"
            app:argType="integer" />
        <action
            android:id="@+id/detailToArticleWebView"
            app:destination="@id/articleWebViewFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/detailToBanner"
            app:destination="@id/bannerFragment" />
    </fragment>

    <fragment
        android:id="@+id/articleWebViewFragment"
        android:name="com.developerbreach.developerbreach.ui.articleWebView.ArticleWebViewFragment"
        android:label="ArticleWebView"
        tools:layout="@layout/fragment_article_web_view">
        <argument
            android:name="articleUrlLink"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.developerbreach.developerbreach.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/settingsToCommonWebView"
            app:destination="@id/commonWebViewFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/commonWebViewFragment"
        android:name="com.developerbreach.developerbreach.ui.commonWebView.CommonWebViewFragment"
        android:label="Common WebView"
        tools:layout="@layout/fragment_common_web_view">
        <argument
            android:name="webViewFragmentArgs"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/bannerFragment"
        android:name="com.developerbreach.developerbreach.ui.banner.BannerFragment"
        android:label="Banner"
        tools:layout="@layout/fragment_banner">
        <argument
            android:name="bannerUrlLink"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <dialog
        android:id="@+id/optionsFragment"
        android:name="com.developerbreach.developerbreach.view.options.OptionsFragment"
        android:label="Options"
        tools:layout="@layout/fragment_options">
        <action
            android:id="@+id/optionsToAuthors"
            app:destination="@id/authorsFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:popEnterAnim="@anim/fade_enter_anim"
            app:popExitAnim="@anim/slide_out_bottom" />
        <action
            android:id="@+id/optionsToFavorites"
            app:destination="@id/favoritesFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:popEnterAnim="@anim/fade_enter_anim"
            app:popExitAnim="@anim/slide_out_bottom" />
        <action
            android:id="@+id/optionsToSearch"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:popEnterAnim="@anim/fade_enter_anim"
            app:popExitAnim="@anim/slide_out_bottom" />
        <action
            android:id="@+id/optionsToSettings"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:popEnterAnim="@anim/fade_enter_anim"
            app:popExitAnim="@anim/slide_out_bottom" />
    </dialog>

    <fragment
        android:id="@+id/authorsFragment"
        android:name="com.developerbreach.developerbreach.ui.authors.AuthorsFragment"
        android:label="Authors"
        tools:layout="@layout/fragment_authors" />

    <fragment
        android:id="@+id/networkFragment"
        android:name="com.developerbreach.developerbreach.ui.offline.NetworkFragment"
        android:label="Network"
        tools:layout="@layout/fragment_network" />

    <action
        android:id="@+id/toDetailFragmentGlobal"
        app:destination="@id/articleDetailFragment" />

    <action
        android:id="@+id/toIntroFragmentGlobal"
        app:destination="@id/introFragment" />

    <action
        android:id="@+id/toOptionsFragmentGlobal"
        app:destination="@id/optionsFragment" />

    <action
        android:id="@+id/toNetworkFragmentGlobal"
        app:destination="@id/networkFragment" />

</navigation>