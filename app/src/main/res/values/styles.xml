<resources>

    <style name="CardView.Article.Item.List" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="MaterialDialog.Article.Settings.Button" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Button.Article.Settings.Text</item>
        <item name="buttonBarNegativeButtonStyle">@style/Button.Article.Settings.Text</item>
    </style>

    <style name="Button.Article.Settings.Text" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
        <item name="buttonBarButtonStyle">?attr/selectableItemBackground</item>
        <item name="rippleColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.Article.Toolbar.FavoriteList" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.Article.Result.Error" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ProgressBar.Article.Material.Horizontal" parent="android:Widget.Material.Light.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="TextAppearance.Article.Detail.Author" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Article.Detail.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.Article.Detail.Excerpt" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:alpha">0.7</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="Button.Article.Detail.WebView" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="FloatingActionButton.Article.Common" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">@dimen/layout_margin_16dp</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TextAppearance.Article.Item.Search" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="EditText.Article.Search.SearchBox" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dialog_fragment</item>
    </style>

</resources>
