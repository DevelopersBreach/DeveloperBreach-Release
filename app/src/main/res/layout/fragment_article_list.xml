<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="navController"
            type="androidx.navigation.NavController" />

        <variable
            name="viewModel"
            type="com.developerbreach.developerbreach.view.list.ArticleListViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.Blue"
        tools:context=".view.list.ArticleListFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/background"
            app:liftOnScroll="false"
            app:liftOnScrollTargetViewId="@id/detail_view_scroll_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/detail_fragment_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:bindSelectedCategoryText="@{viewModel.selectedCategoryName}"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_up_button"
                    app:navigationIconTint="?attr/colorOnBackground"
                    app:setNavigationOnClickListener="@{() -> navController.navigateUp()}"
                    app:titleTextColor="?attr/colorOnBackground"
                    tools:title="Kotlin" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/category_select_recycler_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/layout_margin_4dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/padding_12dp"
                    android:scrollbars="none"
                    app:bindArticleListViewModel="@{viewModel}"
                    app:bindArticlesCategoryListData="@{viewModel.categories}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:spanCount="1"
                    tools:ignore="RtlSymmetry"
                    tools:itemCount="6"
                    tools:listitem="@layout/item_categories"
                    tools:paddingStart="@dimen/padding_20dp" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_bar_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:visibility="invisible"
                    app:bindLinearProgressDataState="@{viewModel.categoriesDataState}"
                    app:indicatorColor="?attr/colorOnBackground"
                    app:layout_constraintBottom_toTopOf="@id/hor_line_category"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <View
                android:id="@+id/hor_line_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/horizontal_line_height"
                android:alpha="0.1"
                android:background="?attr/colorOnBackground"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/articles_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/match_constraint"
                android:layout_marginHorizontal="@dimen/recycler_view_spacing_dimen"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_12dp"
                android:scrollbars="none"
                app:bindArticleListViewModel="@{viewModel}"
                app:bindArticlesListDataByCategory="@{viewModel.articlesByCategory}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hor_line_category"
                tools:itemCount="6"
                tools:listitem="@layout/item_article"
                tools:visibility="invisible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/select_category_background_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/placeholder_image_height"
            android:layout_gravity="center"
            android:padding="@dimen/padding_20dp"
            android:src="@drawable/ic_no_articles_state"
            app:bindArticlesEmptyStateImage="@{viewModel.articlesByCategory.size()}"
            tools:ignore="ContentDescription" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_bar_article_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="invisible"
            app:bindCircularProgressDataState="@{viewModel.articlesState}"
            app:indicatorColor="?attr/colorOnBackground" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>