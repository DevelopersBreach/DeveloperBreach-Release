<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="navController"
            type="androidx.navigation.NavController" />

        <variable
            name="viewModel"
            type="com.developerbreach.developerbreach.view.list.ArticleListViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.MainTheme"
        tools:context=".view.list.ArticleListFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ImageView
                android:id="@+id/article_list_fragment_up_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:alpha="0.7"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/up_button_content_description"
                android:onClick="@{() -> navController.navigateUp()}"
                android:src="@drawable/ic_up_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/selected_posts_category_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@id/article_list_fragment_up_button"
                android:textAppearance="?attr/textAppearanceHeadline5"
                app:bindSelectedCategoryText="@{viewModel.selectedCategoryName}"
                app:layout_constraintStart_toEndOf="@id/article_list_fragment_up_button"
                app:layout_constraintTop_toTopOf="@id/article_list_fragment_up_button"
                tools:text="Kotlin" />

            <ImageView
                android:id="@+id/selected_posts_category_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                app:bindSelectedCategoryIcon="@{viewModel.selectedCategoryName}"
                app:layout_constraintStart_toEndOf="@id/selected_posts_category_tag"
                app:layout_constraintTop_toTopOf="@id/selected_posts_category_tag"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_android" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_select_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:scrollbars="none"
                app:bindArticleListViewModel="@{viewModel}"
                app:bindArticlesCategoryListData="@{viewModel.categories}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/hor_line_category"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/selected_posts_category_tag"
                app:spanCount="1"
                tools:ignore="RtlSymmetry"
                tools:itemCount="6"
                tools:listitem="@layout/item_categories"
                tools:paddingStart="20dp" />

            <View
                android:id="@+id/hor_line_category"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:alpha="0.1"
                android:background="?attr/colorOnBackground"
                app:layout_constraintTop_toBottomOf="@id/category_select_recycler_view" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/articles_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/recycler_view_spacing_dimen"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:scrollbars="none"
                app:bindArticlesListDataByCategory="@{viewModel.articlesByCategory}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hor_line_category"
                app:reverseLayout="true"
                app:stackFromEnd="true"
                tools:itemCount="6"
                tools:listitem="@layout/item_article"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/select_category_background_image_view"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:padding="20dp"
                android:src="@drawable/ic_no_articles_state"
                app:bindArticlesEmptyStateImage="@{viewModel.articlesByCategory.size()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hor_line_category"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>