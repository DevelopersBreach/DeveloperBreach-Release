<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="navController"
            type="androidx.navigation.NavController" />

        <variable
            name="viewModel"
            type="com.developerbreach.developerbreach.view.detail.ArticleDetailViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/article_detail_fragment_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background"
        android:fitsSystemWindows="true"
        android:transitionName="@{Integer.toString(viewModel.articleId)}"
        tools:context=".view.details.ArticleDetailFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/detail_fragment_appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_appbar_layout_height"
            android:background="?attr/background"
            android:fitsSystemWindows="true"
            app:liftOnScroll="true"
            app:liftOnScrollTargetViewId="@id/detail_view_scroll_view">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/detail_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/background"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@id/detail_fragment_toolbar">

                <ImageView
                    android:id="@+id/detail_banner_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/article_image_content_description"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:transitionName="@{viewModel.articleDetailData.banner.toString()}"
                    app:bindCollapsingBannerImage="@{viewModel.articleDetailData.banner}"
                    app:layout_collapseMode="parallax"
                    tools:layout_gravity="center"
                    tools:src="@drawable/hourglass" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/detail_fragment_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_up_button"
                    app:setNavigationOnClickListener="@{() -> navController.navigateUp()}" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/detail_view_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/layout_margin_16dp"
                android:layout_marginEnd="@dimen/layout_margin_16dp">

                <ImageView
                    android:id="@+id/article_author_detail_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    app:bindArticleAuthorDetailImage="@{viewModel.authorData}"
                    app:bindArticleAuthorTitle="@{articleDetailAuthorItemTextView}"
                    app:layout_constraintBottom_toTopOf="@id/article_detail_author_item_text_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/article_detail_author_item_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintBottom_toTopOf="@id/article_detail_posted_date_text_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/article_author_detail_image_view"
                    tools:text="@string/author_name_tools_text" />

                <TextView
                    android:id="@+id/article_detail_posted_date_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_12dp"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="?attr/colorOnBackground"
                    app:bindArticleDetailDatePosted="@{viewModel.articleDetailData.postedDate}"
                    app:layout_constraintBottom_toTopOf="@id/article_detail_title_item_text_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="May 1st, 2021" />

                <TextView
                    android:id="@+id/article_detail_title_item_text_view"
                    style="@style/TextAppearance.Article.Detail.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_12dp"
                    android:gravity="center"
                    android:text="@{viewModel.articleDetailData.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/article_detail_posted_date_text_view"
                    tools:text="@string/article_title_tools_text" />

                <TextView
                    android:id="@+id/article_excerpt_detail_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_28dp"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    app:bindArticleExcerpt="@{viewModel.articleDetailData.excerpt}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/article_detail_title_item_text_view"
                    tools:text="@string/article_excerpt_tools_text" />

                <Button
                    android:id="@+id/open_web_view_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_margin_24dp"
                    app:bindButtonWebView="@{viewModel.articleDetailData.urlLink}"
                    app:icon="@drawable/ic_launch"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/article_excerpt_detail_text_view"
                    tools:text="@string/open_web_view_button_tools_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone"
            app:bindCircularProgressDataState="@{viewModel.detailState}"
            tools:visibility="visible" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/article_detail_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/layout_margin_16dp"
            android:contentDescription="@string/add_favorite_button_content_description"
            android:src="@drawable/ic_favorite_add"
            app:bindDetailViewModel="@{viewModel}"
            app:rippleColor="?attr/colorOnSecondary" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
