<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.developerbreach.developerbreach.view.detail.ArticleDetailViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/article_detail_fragment_parent"
        android:transitionName="@{viewModel.selectedArticle.name}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".view.details.ArticleDetailFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/detail_fragment_appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_appbar_layout_height"
            android:fitsSystemWindows="true"
            app:liftOnScroll="true"
            app:liftOnScrollTargetViewId="@id/detail_view_scroll_view">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/detail_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorSurface"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@id/detail_fragment_toolbar">

                <ImageView
                    android:id="@+id/detail_banner_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/article_image_content_description"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:bindCollapsingBannerImage="@{viewModel.selectedArticle.banner}"
                    app:layout_collapseMode="parallax"
                    tools:layout_gravity="center"
                    tools:layout_height="@dimen/image_size_tools"
                    tools:layout_width="@dimen/image_size_tools"
                    tools:src="@drawable/ic_placeholder" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/detail_fragment_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_up_button" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/detail_view_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/layout_margin_16dp"
                android:layout_marginEnd="@dimen/layout_margin_16dp">

                <TextView
                    android:id="@+id/article_detail_author_item_text_view"
                    style="@style/TextAppearance.Article.Detail.Author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_20dp"
                    android:gravity="center"
                    app:bindAuthorAndData="@{viewModel.selectedArticle.postedDate}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/author_name_tools_text" />

                <TextView
                    android:id="@+id/article_detail_title_item_text_view"
                    style="@style/TextAppearance.Article.Detail.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_12dp"
                    android:gravity="center"
                    android:text="@{viewModel.selectedArticle.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/article_detail_author_item_text_view"
                    tools:text="@string/article_title_tools_text" />

                <TextView
                    android:id="@+id/article_excerpt_detail_text_view"
                    style="@style/TextAppearance.Article.Detail.Excerpt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_28dp"
                    android:gravity="center"
                    app:bindArticleExcerpt="@{viewModel.selectedArticle.excerpt}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/article_detail_title_item_text_view"
                    tools:text="@string/article_excerpt_tools_text" />

                <Button
                    android:id="@+id/open_web_view_button"
                    style="@style/Button.Article.Detail.WebView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_margin_24dp"
                    app:bindButtonWebView="@{viewModel.selectedArticle}"
                    app:icon="@drawable/ic_launch"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/article_excerpt_detail_text_view"
                    tools:text="@string/open_web_view_button_tools_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/article_detail_fab"
            style="@style/FloatingActionButton.Article.Common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            app:bindDetailViewModel="@{viewModel}"
            app:bindNavigateUpFromDetail="@{detailFragmentToolbar}"
            app:rippleColor="?attr/colorOnSecondary"
            app:srcCompat="@drawable/ic_favorites" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
