<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="navController"
            type="androidx.navigation.NavController" />

        <variable
            name="viewModel"
            type="com.developerbreach.developerbreach.view.search.SearchViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.HomeTheme"
        tools:context=".view.details.ArticleDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toolbar_content_search_header"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/search_fragment_up_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:alpha="0.5"
                    android:contentDescription="@string/search_button_content_description"
                    android:onClick="@{() -> navController.navigateUp()}"
                    android:src="@drawable/ic_up_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/colorOnBackground" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/article_search_edit_text"
                    style="@style/EditText.Article.Search.SearchBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin_24dp"
                    android:layout_marginTop="4dp"
                    android:hint="@string/search_articles_hint"
                    app:layout_constraintBottom_toBottomOf="@id/search_fragment_up_button"
                    app:layout_constraintStart_toEndOf="@id/search_fragment_up_button"
                    app:layout_constraintTop_toTopOf="@id/search_fragment_up_button" />

                <ImageView
                    android:id="@+id/clear_search_query_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/layout_margin_12dp"
                    android:alpha="0.5"
                    android:contentDescription="@string/clear_search_query_content_description"
                    android:src="@drawable/ic_search"
                    android:visibility="visible"
                    app:bindClearSearchQueryData="@{articleSearchEditText}"
                    app:bindSearchViewModelHeader="@{viewModel}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/colorOnBackground"
                    tools:visibility="visible" />

                <View
                    android:id="@+id/hor_line_search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="?attr/colorOnBackground"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/no_search_results_found_text"
                    style="@style/TextAppearance.Article.Result.Error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/no_search_results_found"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hor_line_search_bar"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/search_background_image_view"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/ic_search_bg"
                app:bindSearchEmptyStateImage="@{viewModel.searchableArticles.size()}"
                app:bindSearchRecyclerViewState="@{searchRecyclerView}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar_content_search_header"
                tools:ignore="ContentDescription" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_12dp"
                android:paddingBottom="@dimen/padding_12dp"
                android:scrollbars="none"
                android:visibility="visible"
                app:bindSearchRecyclerViewData="@{viewModel.searchableArticles}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar_content_search_header"
                app:reverseLayout="true"
                app:stackFromEnd="true"
                tools:itemCount="12"
                tools:listitem="@layout/item_search"
                tools:visibility="invisible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>