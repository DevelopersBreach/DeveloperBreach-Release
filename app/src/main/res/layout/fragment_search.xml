<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.developerbreach.developerbreach.view.search.SearchViewModel" />

        <variable
            name="fragment"
            type="com.developerbreach.developerbreach.view.search.SearchFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".view.details.ArticleDetailFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:liftOnScroll="true"
            app:liftOnScrollTargetViewId="@id/search_recycler_view">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/layout_margin_12dp"
                android:layout_marginTop="@dimen/layout_margin_4dp"
                android:layout_marginEnd="@dimen/layout_margin_12dp"
                app:cardCornerRadius="@dimen/card_corner_radius_search_item"
                app:cardElevation="@dimen/card_elevation_search_item">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="pin">

                    <include
                        android:id="@+id/toolbar_content_search_header"
                        layout="@layout/search_header_layout"
                        app:layout_collapseMode="parallax" />

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?actionBarSize"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:bindSearchRecyclerViewData="@{viewModel}"
                app:bindSearchFragmentReference="@{fragment}"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_12dp"
                android:paddingBottom="@dimen/padding_12dp"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:reverseLayout="true"
                app:stackFromEnd="true"
                tools:itemCount="12"
                tools:listitem="@layout/item_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/no_search_results_found_text"
                style="@style/TextAppearance.Article.Result.Error"
                android:text="@string/no_search_results_found"
                tools:visibility="invisible" />

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>